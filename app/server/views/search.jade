
extends layout

block content

	#login.center-vertical
		form.well(id='form-search', method='get')
			h2 Customer Search
			.form-group
				label First Name
				input.form-control(type='firstName', id='first-name-tf', name='firstName')
			.form-group
				label Last Name
				input.form-control(type='lastName', id='last-name-tf', name='lastName')
			.form-group
				label Date of Birth
				input.form-control(type='dateOfBirth', id='dob-tf', name='dob')
			.form-group
				button(type='submit').btn.btn-primary
					| Search
			.clearfix

	include modals/alert
	include modals/lost-password

block scripts
	script(src='/vendor/jquery-2.2.3.min.js')
	script(src='/vendor/jquery.form.min.js')
	script(src='/vendor/bootstrap.min.js')
	script(src='/js/views/login.js')
	script(src='/js/controllers/loginController.js')
	script(src='/js/form-validators/loginValidator.js')
	script(src='/js/form-validators/emailValidator.js')